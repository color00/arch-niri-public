timeout 300 'gtklock -d' 
timeout 600 'niri msg action power-off-monitors && brightnessctl --device=asus::kbd_backlight --save set 0' resume 'niri msg action power-on-monitors && brightnessctl --device=asus::kbd_backlight --restore' 
before-sleep 'gtklock' 
lock 'gtklock' 
unlock 'pkill -SIGUSR1 -ux $USER gtklock'
